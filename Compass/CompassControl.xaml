<UserControl x:Class="Compass.CompassControl"
    x:Name="CompassControlRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Compass"
    Margin="0"
    Padding="0"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}">

    <Grid x:Name="LayoutRoot"
          Background="Transparent"
          Margin="0"
          RenderTransformOrigin="0.5, 0.5">
        <UIElement.RenderTransform>
            <RotateTransform
                x:Name="PlateRotation"
                CenterX="0.5"
                CenterY="0.5"
                Angle="0" />   
        </UIElement.RenderTransform>
        <Image
            x:Name="PlateBackground"
            Width="290"
            Height="600"
            Stretch="Uniform"
            Opacity="0.2"
            Source="/Assets/Graphics/compass_plate_bg_dark.png"
            Visibility="Visible"
            />
        <Image
            x:Name="Plate"
            Width="290"
            Height="600"
            Stretch="Uniform"
            Source="/Assets/Graphics/compass_plate.png"
            />
        <Grid x:Name="ScaleGrid">
            <UIElement.RenderTransform>
                <TranslateTransform
                    x:Name="ScalePosition"
                    X="0"
                    Y="100"
                    />
            </UIElement.RenderTransform>
            <Image
                x:Name="ScaleShadow"
                Width="276"
                Stretch="Uniform"
                Source="/Assets/Graphics/scale_shadow.png"
                />
            <Image
                x:Name="Scale"
                Width="276"
                Stretch="Uniform"
                RenderTransformOrigin="0.5, 0.5"
                Source="/Assets/Graphics/scale.png">
                <UIElement.RenderTransform>
                    <RotateTransform
                    x:Name="ScaleRotation"
                    CenterX="0.5"
                    CenterY="0.5"
                    Angle="0" />
                </UIElement.RenderTransform>
            </Image>
            <Image
                x:Name="Needle"
                Width="21"
                Stretch="Uniform"
                RenderTransformOrigin="0.5, 0.5"
                Source="/Assets/Graphics/compass_needle.png">
                <UIElement.RenderTransform>
                    <RotateTransform
                    x:Name="NeedleRotation"
                    CenterX="0.5"
                    CenterY="0.5"
                    Angle="0" />
                </UIElement.RenderTransform>
            </Image>
        </Grid>
    </Grid>
</UserControl>